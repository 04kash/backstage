{
  "extends": "@backstage/cli/config/tsconfig.json",
  "include": [
    "packages/*/src",
    "packages/*/config.d.ts",
    "plugins/*/src",
    "plugins/*/config.d.ts",
    "plugins/*/dev",
    "plugins/*/migrations"
  ],
  "exclude": ["**/*.stories.tsx", "**/*.stories.ts"],
  "compilerOptions": {
    "outDir": "dist-types",
    "rootDir": ".",
    "useUnknownInCatchVariables": false
  }
}
